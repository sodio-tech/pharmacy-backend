{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    
    "module": "NodeNext", 
    "target": "ES2022",
    "lib": ["ES2022"],
    "types": ["node"],
    "forceConsistentCasingInFileNames": true,
    
    "sourceMap": true,
    "declaration": false, 
    
    "strict": true,
    "noUncheckedIndexedAccess": true,
    
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
